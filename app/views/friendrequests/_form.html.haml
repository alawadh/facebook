= form_for @friendrequest do |f|
  - if @friendrequest.errors.any?
    #error_explanation
      %h2= "#{pluralize(@friendrequest.errors.count, "error")} prohibited this friendrequest from being saved:"
      %ul
        - @friendrequest.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :futurefriend
    = f.text_field :futurefriend
  .field
    = f.label :user
    = f.text_field :user
  .actions
    = f.submit 'Save'
