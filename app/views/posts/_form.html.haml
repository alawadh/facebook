= form_for @post do |f|
  - if @post.errors.any?
    #error_explanation
      %h2= "#{pluralize(@post.errors.count, "error")} prohibited this post from being saved:"
      %ul
        - @post.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :date_time
    = f.datetime_select :date_time
  .field
    = f.label :wall_post
    = f.text_area :wall_post
  .field
    = f.label :wall_id
    = f.text_field :wall_id
  .field
    = f.label :user
    = f.text_field :user
  .actions
    = f.submit 'Save'
