= form_for @user.@friend do |f|
  - if @friend.errors.any?
    #error_explanation
      %h2= "#{pluralize(@friend.errors.count, "error")} prohibited this friend from being saved:"
      %ul
        - @friend.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :friend_username
    = f.text_field :friend_username
  .field
    = f.label :user
    = f.text_field :user
  .actions
    = f.submit 'Save'
